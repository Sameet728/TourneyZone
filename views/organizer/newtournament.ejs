<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create New Tournament | BattleZone</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    :root {
      --primary: #6c5ce7;
      --secondary: #a29bfe;
      --dark: #2d3436;
      --light: #f5f6fa;
      --accent: #fd79a8;
      --success: #00b894;
      --info: #0984e3;
    }

    body {
      background-color: #1a1a2e;
      color: #f1f1f1;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .navbar {
      background-color: rgba(26, 26, 46, 0.9) !important;
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--primary);
    }

    .form-container {
      background: linear-gradient(135deg, rgba(44, 44, 84, 0.8) 0%, rgba(26, 26, 46, 0.9) 100%);
      border-radius: 15px;
      border: 1px solid var(--primary);
      box-shadow: 0 10px 30px rgba(108, 92, 231, 0.2);
      padding: 2rem;
      margin-top: 2rem;
      margin-bottom: 3rem;
    }

    .form-label {
      color: var(--secondary);
      font-weight: 500;
      margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
      background-color: rgba(255, 255, 255, 0.05);
      border: 1px solid var(--primary);
      color: white;
      padding: 0.75rem 1rem;
      border-radius: 8px;
      transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
      background-color: rgba(255, 255, 255, 0.1);
      border-color: var(--accent);
      box-shadow: 0 0 0 0.25rem rgba(253, 121, 168, 0.25);
      color: white;
    }

    .btn-success {
      background-color: var(--success);
      border: none;
      padding: 0.75rem 2rem;
      border-radius: 8px;
      font-weight: 600;
      letter-spacing: 0.5px;
      transition: all 0.3s ease;
      text-transform: uppercase;
      background-image: linear-gradient(to right, var(--success), #55efc4);
    }

    .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0, 184, 148, 0.4);
    }

    h2 {
      color: white;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      position: relative;
      display: inline-block;
      margin-bottom: 2rem;
    }

    h2::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 60px;
      height: 4px;
      background: linear-gradient(to right, var(--primary), var(--accent));
      border-radius: 2px;
    }

    .hidden {
      display: none;
    }

    /* Animated background elements */
    .bg-circle {
      position: fixed;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(108, 92, 231, 0.2) 0%, rgba(108, 92, 231, 0) 70%);
      z-index: -1;
    }

    .circle-1 {
      width: 300px;
      height: 300px;
      top: -100px;
      right: -100px;
    }

    .circle-2 {
      width: 200px;
      height: 200px;
      bottom: -50px;
      left: -50px;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .form-container {
        padding: 1.5rem;
      }
      
      h2 {
        font-size: 1.8rem;
      }
    }

    /* Input group styling */
    .input-group-text {
      background-color: rgba(108, 92, 231, 0.2);
      border: 1px solid var(--primary);
      color: var(--secondary);
    }

    /* Custom checkbox */
    .form-check-input {
      background-color: rgba(255, 255, 255, 0.05);
      border: 1px solid var(--primary);
    }

    .form-check-input:checked {
      background-color: var(--primary);
      border-color: var(--primary);
    }
  </style>
</head>

<body>
  <%- include("../includes/navbar") %>

  <!-- Animated background elements -->
  <div class="bg-circle circle-1"></div>
  <div class="bg-circle circle-2"></div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="form-container">
          <h2 class="text-center mb-4">CREATE NEW TOURNAMENT</h2>

          <form action="/organizer/tournaments" method="POST" class="row g-4">
            <!-- Tournament Name -->
            <div class="col-md-6">
              <label for="name" class="form-label">
                <i class="fas fa-trophy me-2"></i>Tournament Name
              </label>
              <input type="text" class="form-control" name="name" id="name" placeholder="Enter tournament name" required />
            </div>

            <!-- Game -->
            <div class="col-md-6">
              <label for="game" class="form-label">
                <i class="fas fa-gamepad me-2"></i>Game
              </label>
              <input type="text" class="form-control" name="game" id="game" placeholder="Enter game title" required />
            </div>

            <!-- Entry Fee -->
            <div class="col-md-6">
              <label for="entryFee" class="form-label">
                <i class="fas fa-rupee-sign me-2"></i>Entry Fee (₹)
              </label>
              <div class="input-group">
                <span class="input-group-text">₹</span>
                <input type="number" class="form-control" name="entryFee" id="entryFee" min="0" value="0" placeholder="0" required />
              </div>
            </div>

            <!-- Team Limit -->
            <div class="col-md-6">
              <label for="teamLimit" class="form-label">
                <i class="fas fa-users me-2"></i>Team Limit
              </label>
              <input type="number" name="teamLimit" class="form-control" placeholder="8, 16, 32, etc." required>
            </div>

            <!-- Description -->
            <div class="col-12">
              <label for="description" class="form-label">
                <i class="fas fa-align-left me-2"></i>Description
              </label>
              <textarea class="form-control" name="description" id="description" rows="4" placeholder="Describe your tournament rules, format, and other details"></textarea>
            </div>

            <!-- Start and End Dates -->
            <div class="col-md-6">
              <label for="startDate" class="form-label">
                <i class="far fa-calendar-alt me-2"></i>Start Date
              </label>
              <input type="date" class="form-control" name="startDate" id="startDate" required />
            </div>

            <div class="col-md-6">
              <label for="endDate" class="form-label">
                <i class="far fa-calendar-alt me-2"></i>End Date
              </label>
              <input type="date" class="form-control" name="endDate" id="endDate" required />
            </div>

            <!-- Tournament Type -->
            <div class="col-md-6">
              <label for="type" class="form-label">
                <i class="fas fa-chess me-2"></i>Tournament Type
              </label>
              <select name="type" id="type" class="form-select" required onchange="toggleTimeSlot()">
                <option value="regular" selected>Regular Tournament</option>
                <option value="scrim">Daily Scrim</option>
              </select>
            </div>

            <!-- Time Slot (only for scrim) -->
            <div class="col-md-6 hidden" id="timeSlotGroup">
              <label for="timeSlot" class="form-label">
                <i class="far fa-clock me-2"></i>Time Slot
              </label>
              <select name="timeSlot" id="timeSlot" class="form-select">
                <option value="">-- Select Time Slot --</option>
                <option value="9 AM - 12 PM">Morning (9 AM - 12 PM)</option>
                <option value="12 PM - 3 PM">Noon (12 PM - 3 PM)</option>
                <option value="3 PM - 6 PM">Afternoon (3 PM - 6 PM)</option>
                <option value="6 PM - 9 PM">Evening (6 PM - 9 PM)</option>
                <option value="9 PM - 12 AM">Night (9 PM - 12 AM)</option>
              </select>
            </div>

            <!-- Submit Button -->
            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn btn-success btn-lg px-5 py-3">
                <i class="fas fa-rocket me-2"></i>LAUNCH TOURNAMENT
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- JS for toggling scrim time slot -->
  <script>
    function toggleTimeSlot() {
      const type = document.getElementById("type").value;
      const timeSlotGroup = document.getElementById("timeSlotGroup");

      if (type === "scrim") {
        timeSlotGroup.classList.remove("hidden");
        timeSlotGroup.classList.add("animate__animated", "animate__fadeIn");
      } else {
        timeSlotGroup.classList.add("hidden");
        document.getElementById("timeSlot").value = "";
      }
    }

    // Trigger once on load
    window.onload = toggleTimeSlot;

    // Add animation to form elements on scroll
    document.addEventListener('DOMContentLoaded', function() {
      const animateOnScroll = function() {
        const elements = document.querySelectorAll('.form-container .col-md-6, .form-container .col-12');
        elements.forEach((element, index) => {
          const elementPosition = element.getBoundingClientRect().top;
          const windowHeight = window.innerHeight;
          
          if (elementPosition < windowHeight - 100) {
            setTimeout(() => {
              element.style.opacity = '1';
              element.style.transform = 'translateY(0)';
            }, index * 100);
          }
        });
      };

      // Initial state
      const elements = document.querySelectorAll('.form-container .col-md-6, .form-container .col-12');
      elements.forEach(element => {
        element.style.opacity = '0';
        element.style.transform = 'translateY(20px)';
        element.style.transition = 'all 0.5s ease-out';
      });

      // Run on load and scroll
      animateOnScroll();
      window.addEventListener('scroll', animateOnScroll);
    });
  </script>
  <%- include("../includes/footer") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>