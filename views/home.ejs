<!DOCTYPE html>
<html lang="en">
<head>
  <title>TourneyZone | Competitive Gaming Platform</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Compete in esports tournaments, organize events, and join the gaming community">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #6a00f4;
      --secondary: #00d4ff;
      --dark: #0f0e17;
      --light: #f8f8ff;
      --success: #28a745;
    }
    
    body {
      background-color: var(--dark);
      color: var(--light);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      overflow-x: hidden;
    }

    .hero-section {
      background: linear-gradient(135deg, rgba(15,14,23,0.9) 0%, rgba(26,26,46,0.9) 100%), 
                  url('https://images.unsplash.com/photo-1542751371-adc38448a05e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
      background-size: cover;
      background-position: center;
      min-height: 80vh;
      display: flex;
      align-items: center;
      position: relative;
      padding: 4rem 0;
    }

    .hero-content {
      z-index: 2;
    }

    .hero-title {
      font-size: 3.5rem;
      font-weight: 800;
      background: linear-gradient(90deg, var(--secondary), var(--primary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1.5rem;
      line-height: 1.2;
    }

    .hero-subtitle {
      font-size: 1.5rem;
      color: rgba(255,255,255,0.8);
      margin-bottom: 2rem;
      max-width: 700px;
    }

    .btn-hero {
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      border: none;
      padding: 0.75rem 2rem;
      border-radius: 8px;
      font-weight: 600;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      transition: all 0.3s ease;
      color: white;
    }

    .btn-hero:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(106, 0, 244, 0.4);
      color: white;
    }

    .feature-section {
      padding: 5rem 0;
      background-color: rgba(15, 14, 23, 0.7);
    }

    .section-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 3rem;
      text-align: center;
      background: linear-gradient(90deg, var(--primary), var(--secondary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .feature-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(106, 0, 244, 0.3);
      border-radius: 16px;
      padding: 2rem;
      height: 100%;
      transition: all 0.3s ease;
    }

    .feature-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 30px rgba(106, 0, 244, 0.2);
      border-color: var(--primary);
    }

    .feature-icon {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .feature-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 1rem;
    }

    .feature-text {
      color: rgba(255,255,255,0.7);
    }

    .tournament-highlights {
      padding: 5rem 0;
      background: linear-gradient(135deg, rgba(15,14,23,0.9) 0%, rgba(26,26,46,0.9) 100%);
    }

    .highlight-card {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.3s ease;
      border: 1px solid rgba(106, 0, 244, 0.3);
    }

    .highlight-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(106, 0, 244, 0.3);
    }

    .highlight-img {
      height: 200px;
      object-fit: cover;
      width: 100%;
    }

    .highlight-body {
      padding: 1.5rem;
    }

    .highlight-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .highlight-meta {
      display: flex;
      justify-content: space-between;
      color: rgba(255,255,255,0.6);
      margin-bottom: 1rem;
      font-size: 0.9rem;
    }

    .highlight-badge {
      background: rgba(106, 0, 244, 0.2);
      color: var(--secondary);
      padding: 0.25rem 0.75rem;
      border-radius: 50px;
      font-size: 0.8rem;
      font-weight: 600;
    }

    .cta-section {
      padding: 5rem 0;
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      text-align: center;
    }

    .cta-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      color: white;
    }

    .cta-text {
      font-size: 1.25rem;
      margin-bottom: 2rem;
      color: rgba(255,255,255,0.9);
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Mobile Optimizations */
    @media (max-width: 768px) {
      .hero-title {
        font-size: 2.5rem;
      }
      
      .hero-subtitle {
        font-size: 1.25rem;
      }
      
      .feature-section, .tournament-highlights, .cta-section {
        padding: 3rem 0;
      }
      
      .section-title {
        font-size: 2rem;
      }
    }
  </style>
</head>
<body>
  <%- include("includes/navbar") %>

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-8 hero-content">
          <h1 class="hero-title">ENTER THE ARENA</h1>
          <p class="hero-subtitle">Compete in thrilling esports tournaments, organize competitive events, and join a growing community of gamers. Your next challenge awaits.</p>
          <div class="d-flex gap-3">
            <a href="/tournaments" class="btn btn-hero">
              <i class="fas fa-trophy me-2"></i> Browse Tournaments
            </a>
            <% if (!currentUser) { %>
            <a href="/signup" class="btn btn-outline-light">
              <i class="fas fa-user-plus me-2"></i> Join Now
            </a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="feature-section">
    <div class="container">
      <h2 class="section-title">WHY CHOOSE TOURNEYZONE?</h2>
      <div class="row g-4">
        <div class="col-md-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-trophy"></i>
            </div>
            <h3 class="feature-title">Competitive Tournaments</h3>
            <p class="feature-text">Join daily tournaments across multiple game titles with cash prizes and exclusive rewards.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-chess-king"></i>
            </div>
            <h3 class="feature-title">Easy Organization</h3>
            <p class="feature-text">Powerful tools to create and manage your own tournaments with custom rules and brackets.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-wallet"></i>
            </div>
            <h3 class="feature-title">Secure Payments</h3>
            <p class="feature-text">Safe and instant transactions with automated payouts for organizers and players.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tournament Highlights -->
  <section class="tournament-highlights">
    <div class="container">
      <h2 class="section-title">UPCOMING TOURNAMENTS</h2>
      <div class="row g-4">
        <!-- Example Tournament 1 -->
        <div class="col-md-4">
          <div class="highlight-card">
            <img src="https://images.unsplash.com/photo-1542751371-adc38448a05e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=600&q=80" 
                 alt="Valorant Tournament" class="highlight-img">
            <div class="highlight-body">
              <div class="highlight-meta">
                <span><i class="fas fa-calendar-alt me-1"></i> Jun 15, 2023</span>
                <span><i class="fas fa-users me-1"></i> 32/64 Teams</span>
              </div>
              <h3 class="highlight-title">Valorant Champions Cup</h3>
              <p class="feature-text mb-3">$5,000 prize pool • Single Elimination</p>
              <span class="highlight-badge">Entry Fee: ₹500</span>
            </div>
          </div>
        </div>
        
        <!-- Example Tournament 2 -->
        <div class="col-md-4">
          <div class="highlight-card">
            <img src="https://images.unsplash.com/photo-1551103782-8ab07afd45c1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=600&q=80" 
                 alt="Fortnite Tournament" class="highlight-img">
            <div class="highlight-body">
              <div class="highlight-meta">
                <span><i class="fas fa-calendar-alt me-1"></i> Jun 18, 2023</span>
                <span><i class="fas fa-users me-1"></i> 45/100 Players</span>
              </div>
              <h3 class="highlight-title">Fortnite Solo Showdown</h3>
              <p class="feature-text mb-3">$2,500 prize pool • Battle Royale</p>
              <span class="highlight-badge">Entry Fee: ₹300</span>
            </div>
          </div>
        </div>
        
        <!-- Example Tournament 3 -->
        <div class="col-md-4">
          <div class="highlight-card">
            <img src="https://images.unsplash.com/photo-1638893298511-5d0b5e5b9b0f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=600&q=80" 
                 alt="CS:GO Tournament" class="highlight-img">
            <div class="highlight-body">
              <div class="highlight-meta">
                <span><i class="fas fa-calendar-alt me-1"></i> Jun 22, 2023</span>
                <span><i class="fas fa-users me-1"></i> 16/32 Teams</span>
              </div>
              <h3 class="highlight-title">CS:GO Elite Series</h3>
              <p class="feature-text mb-3">$3,000 prize pool • Double Elimination</p>
              <span class="highlight-badge">Entry Fee: ₹750</span>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center mt-5">
        <a href="/tournaments" class="btn btn-hero btn-lg">
          <i class="fas fa-list me-2"></i> View All Tournaments
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2 class="cta-title">READY TO COMPETE?</h2>
      <p class="cta-text">Join thousands of gamers who are already competing in daily tournaments and winning amazing prizes.</p>
      <% if (!currentUser) { %>
        <a href="/signup" class="btn btn-dark btn-lg px-5 py-3">
          <i class="fas fa-user-plus me-2"></i> Create Free Account
        </a>
      <% } else { %>
        <a href="/tournaments" class="btn btn-dark btn-lg px-5 py-3">
          <i class="fas fa-trophy me-2"></i> Join a Tournament
        </a>
      <% } %>
    </div>
  </section>

  <%- include("includes/footer") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Simple animation for feature cards on scroll
    document.addEventListener('DOMContentLoaded', function() {
      const featureCards = document.querySelectorAll('.feature-card');
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = 1;
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, { threshold: 0.1 });
      
      featureCards.forEach(card => {
        card.style.opacity = 0;
        card.style.transform = 'translateY(20px)';
        card.style.transition = 'all 0.5s ease';
        observer.observe(card);
      });
    });
  </script>
</body>
</html>