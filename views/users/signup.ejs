<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Join TourneyZone</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #6a00f4;
      --secondary: #00d4ff;
      --dark: #0f0e17;
      --light: #f8f8ff;
      --success: #28a745;
    }
    
    body {
      background: linear-gradient(135deg, #0f0e17 0%, #1a1a2e 100%);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1rem;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: var(--light);
    }

    .signup-container {
      max-width: 500px;
      width: 100%;
      position: relative;
      overflow: hidden;
    }

    .signup-card {
      width: 100%;
      padding: 2.5rem;
      border-radius: 16px;
      background: rgba(15, 14, 23, 0.8);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(106, 0, 244, 0.3);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      position: relative;
    }

    .signup-card::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(106,0,244,0.1) 0%, rgba(0,212,255,0.05) 50%, transparent 70%);
      z-index: -1;
      animation: rotate 15s linear infinite;
    }

    @keyframes rotate {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .signup-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .signup-header h2 {
      font-weight: 700;
      background: linear-gradient(90deg, var(--secondary), var(--primary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      position: relative;
      margin-bottom: 1rem;
    }

    .signup-header h2::after {
      content: '';
      display: block;
      width: 80px;
      height: 3px;
      background: linear-gradient(90deg, var(--primary), var(--secondary));
      margin: 0.5rem auto 0;
      border-radius: 3px;
    }

    .signup-header p {
      color: rgba(255, 255, 255, 0.7);
      margin-bottom: 0;
    }

    .form-control {
      background-color: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(106, 0, 244, 0.3);
      color: var(--light);
      padding: 0.75rem 1rem;
      border-radius: 8px;
      transition: all 0.3s ease;
    }

    .form-control:focus {
      background-color: rgba(255, 255, 255, 0.1);
      border-color: var(--primary);
      box-shadow: 0 0 0 0.25rem rgba(106, 0, 244, 0.25);
      color: var(--light);
    }

    .form-control::placeholder {
      color: rgba(255, 255, 255, 0.5);
    }

    .form-select {
      background-color: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(106, 0, 244, 0.3);
      color: var(--light);
      padding: 0.75rem 1rem;
      border-radius: 8px;
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23ffffff' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
    }

    .form-select:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 0.25rem rgba(106, 0, 244, 0.25);
    }

    .btn-signup {
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      border: none;
      padding: 0.75rem;
      border-radius: 8px;
      font-weight: 600;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      transition: all 0.3s ease;
      width: 100%;
      margin-top: 1rem;
    }

    .btn-signup:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(106, 0, 244, 0.4);
    }

    .login-link {
      text-align: center;
      margin-top: 1.5rem;
      color: rgba(255, 255, 255, 0.7);
    }

    .login-link a {
      color: var(--secondary);
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .login-link a:hover {
      text-decoration: underline;
    }

    .role-icon {
      width: 24px;
      height: 24px;
      margin-right: 8px;
    }

    /* Password strength meter */
    .password-strength {
      height: 4px;
      background: rgba(255, 255, 255, 0.1);
      margin-top: 8px;
      border-radius: 2px;
      overflow: hidden;
    }

    .strength-meter {
      height: 100%;
      width: 0;
      transition: width 0.3s ease;
    }

    /* Mobile Optimizations */
    @media (max-width: 576px) {
      .signup-card {
        padding: 2rem 1.5rem;
      }
      
      body {
        padding: 0.5rem;
      }
      
      .signup-header h2 {
        font-size: 1.5rem;
      }
    }

    /* Input validation styling */
    .was-validated .form-control:valid {
      border-color: var(--success);
      background-image: none;
    }

    .was-validated .form-control:invalid {
      border-color: #dc3545;
      background-image: none;
    }
  </style>
</head>
<body>
  <div class="signup-container">
    <div class="signup-card">
      <div class="signup-header">
        <h2><i class="fas fa-user-plus me-2"></i>JOIN THE ARENA</h2>
        <p>Create your account to start competing</p>
      </div>
      
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="email" class="form-label">Email Address</label>
          <div class="input-group">
            <span class="input-group-text bg-dark border-end-0"><i class="fas fa-envelope"></i></span>
            <input type="email" name="email" class="form-control border-start-0" placeholder="your@email.com" required>
          </div>
          <div class="invalid-feedback">Please enter a valid email</div>
        </div>

        <div class="mb-3">
          <label for="username" class="form-label">Gamer Tag</label>
          <div class="input-group">
            <span class="input-group-text bg-dark border-end-0"><i class="fas fa-user"></i></span>
            <input type="text" name="username" class="form-control border-start-0" placeholder="Your unique gamer tag" required>
          </div>
          <div class="invalid-feedback">Choose a cool gamer tag</div>
        </div>

        <div class="mb-3">
          <label for="role" class="form-label">Select Your Path</label>
          <select name="role" class="form-select" required>
            <option value="" disabled selected>Choose your destiny...</option>
            <option value="player">
              <i class="fas fa-gamepad me-2"></i> Player - Compete in tournaments
            </option>
            <option value="organizer">
              <i class="fas fa-chess-king me-2"></i> Organizer - Host tournaments
            </option>
          </select>
          <div class="invalid-feedback">Please select your role</div>
        </div>

        <div class="mb-4">
          <label for="password" class="form-label">Secret Code</label>
          <div class="input-group">
            <span class="input-group-text bg-dark border-end-0"><i class="fas fa-lock"></i></span>
            <input type="password" name="password" id="password" class="form-control border-start-0" placeholder="Create a strong password" required>
            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
              <i class="fas fa-eye"></i>
            </button>
          </div>
          <div class="password-strength">
            <div class="strength-meter" id="strengthMeter"></div>
          </div>
          <div class="invalid-feedback">Create a secure password</div>
          <small class="text-muted">At least 8 characters with mix of letters and numbers</small>
        </div>

        <button type="submit" class="btn btn-signup">
          CLAIM YOUR SPOT <i class="fas fa-arrow-right ms-2"></i>
        </button>
      </form>
      
      <div class="login-link">
        Already have an account? <a href="/login">Enter the arena</a>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script>
    // Enhanced validation with gaming-style feedback
    (function () {
      'use strict';
      var forms = document.querySelectorAll('.needs-validation');
      Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
            
            // Add shake animation to invalid fields
            form.querySelectorAll(':invalid').forEach(function(field) {
              field.classList.add('animate__animated', 'animate__headShake');
              setTimeout(() => {
                field.classList.remove('animate__headShake');
              }, 1000);
            });
          }
          form.classList.add('was-validated');
        }, false);
      });
      
      // Password toggle visibility
      const togglePassword = document.querySelector('#togglePassword');
      const password = document.querySelector('#password');
      
      togglePassword.addEventListener('click', function() {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
      });
      
      // Simple password strength meter
      password.addEventListener('input', function() {
        const strengthMeter = document.getElementById('strengthMeter');
        const strength = Math.min(this.value.length / 2, 10) * 10; // Basic strength calculation
        strengthMeter.style.width = strength + '%';
        strengthMeter.style.backgroundColor = strength < 40 ? '#dc3545' : strength < 70 ? '#ffc107' : '#28a745';
      });
      
      // Add animation library for validation effects
      document.head.insertAdjacentHTML('beforeend', 
        '<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>');
    })();
  </script>
</body>
</html>